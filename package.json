{
  "name": "sonar",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.x",
  "description": "SONAR Protocol - Decentralized Audio Data Marketplace",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "build:frontend": "bun run build:packages && bun run --filter frontend build",
    "dev": "bun scripts/dev.ts",
    "dev:frontend": "bun run --filter frontend dev",
    "dev:backend": "bun run --filter backend dev",
    "build:packages": "bun run --filter '@sonar/seal' build",
    "build": "bun run build:packages && bun run --filter frontend build && bun run --filter backend build",
    "lint": "bun run --filter '*' lint",
    "type-check": "bun run --filter '*' type-check",
    "test": "bun run --filter '*' test",
    "bootstrap": "bun scripts/bootstrap.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "download-audio": "bun scripts/download-audio-samples.ts"
  },
  "devDependencies": {
    "eslint": "^9.38.0",
    "globals": "^15.8.0",
    "next": "^16.0.1",
    "prettier": "^3.1.1",
    "typescript-eslint": "^8.13.0"
  }
}
