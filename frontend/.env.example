# Sui Network Configuration
NEXT_PUBLIC_NETWORK=mainnet

# Contract Addresses - MAINNET (v4 with hybrid_seal_policy module)
# Package v4: 0x0210ab6cfe74c5dab23b1a0a0b588a9d61575e0231e4b09b8e19071abe1434f7
# Features: Hybrid encryption policy (admin + purchase), threshold encryption (4-of-6), open-source AI training
# New Module: hybrid_seal_policy provides dual access paths for SONAR team and marketplace buyers
NEXT_PUBLIC_PACKAGE_ID=0x0210ab6cfe74c5dab23b1a0a0b588a9d61575e0231e4b09b8e19071abe1434f7
NEXT_PUBLIC_STATS_OBJECT_ID=0x0
NEXT_PUBLIC_MARKETPLACE_ID=0x0
NEXT_PUBLIC_REWARD_POOL_ID=0x0

# Feature Flags
NEXT_PUBLIC_USE_BLOCKCHAIN=true
# SEAL Key Server (deployed via railway/ folder)
# After Railway deployment, set to your deployed key server URL
NEXT_PUBLIC_SEAL_KEY_SERVERS=https://seal.projectsonar.xyz

# API Configuration
NEXT_PUBLIC_RPC_URL=https://fullnode.mainnet.sui.io
NEXT_PUBLIC_GRAPHQL_URL=https://sui-mainnet.mystenlabs.com/graphql
NEXT_PUBLIC_WALRUS_PUBLISHER_URL=https://publisher.walrus.space
NEXT_PUBLIC_WALRUS_AGGREGATOR_URL=https://aggregator.walrus.space

# Backend API (deploy backend before enabling)
NEXT_PUBLIC_BACKEND_URL=

# Audio Verifier Service (Python FastAPI service for pre-encryption verification)
# Deploy the audio-verifier/ directory to Railway, Fly, or similar
# This service runs quality checks, copyright detection, and AI verification using Google Gemini
# Verification runs BEFORE encryption to ensure audio quality
# NOTE: These are SERVER-SIDE only (no NEXT_PUBLIC prefix) to keep auth token secure
AUDIO_VERIFIER_URL=http://localhost:8000
# AUDIO_VERIFIER_URL=https://your-audio-verifier.railway.app

# Shared secret for audio-verifier authentication (SERVER-SIDE ONLY - NOT exposed to browser)
# Generate with: openssl rand -hex 32
# Must match VERIFIER_AUTH_TOKEN in audio-verifier/.env
VERIFIER_AUTH_TOKEN=your_random_256_bit_token_here

# External API Tokens (server-only)
# WALRUS_SIGNING_KEY=your_walrus_key
# WALRUS_UPLOAD_ENDPOINT=https://api.walrus.testnet/upload
# WALRUS_SEAL_POLICY_ID=seal_policy_id
