# Sui Network Configuration
NEXT_PUBLIC_NETWORK=testnet

# Contract Addresses (update when deployed)
NEXT_PUBLIC_PACKAGE_ID=0x0
NEXT_PUBLIC_STATS_OBJECT_ID=0x0
NEXT_PUBLIC_MARKETPLACE_ID=0x0
NEXT_PUBLIC_REWARD_POOL_ID=0x0

# Feature Flags
NEXT_PUBLIC_USE_BLOCKCHAIN=false  # Set to true when contracts are deployed
NEXT_PUBLIC_USE_FREESOUND=false   # Set to true to enable FreeSound datasets
NEXT_PUBLIC_UPLOAD_ENABLED=true   # Enable conversational dataset uploader
NEXT_PUBLIC_SEAL_KEY_SERVERS=      # Comma-separated Seal key server object IDs (required for Mysten Seal)

# API Configuration (optional)
# NEXT_PUBLIC_RPC_URL=https://fullnode.testnet.sui.io
# NEXT_PUBLIC_GRAPHQL_URL=https://sui-testnet.mystenlabs.com/graphql
NEXT_PUBLIC_WALRUS_AGGREGATOR_URL=https://aggregator.walrus-testnet.walrus.space
BACKEND_URL=http://localhost:4000

# External API Tokens (server-only)
# Get Freesound token at: https://freesound.org/apiv2/apply
# FREESOUND_API_TOKEN=your_freesound_token
# WALRUS_SIGNING_KEY=your_walrus_key
# WALRUS_UPLOAD_ENDPOINT=https://api.walrus.testnet/upload
# WALRUS_SEAL_POLICY_ID=seal_policy_id
# VERIFICATION_AI_MODEL=gpt-4o-mini
