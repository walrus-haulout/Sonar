{
  "$schema": "https://railway.app/json-schema/railway.json",
  "build": {
    "builder": "dockerfile",
    "context": "seal-keyserver",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindow": 600
  },
  "variables": {
    "PORT": {
      "description": "Port to run the backend service on",
      "value": "3001"
    },
    "NODE_ENV": {
      "description": "Node environment (production/development)",
      "value": "production"
    },
    "LOG_LEVEL": {
      "description": "Logging level (trace/debug/info/warn/error)",
      "value": "info"
    },
    "JWT_EXPIRES_IN": {
      "description": "JWT token expiration time",
      "value": "24h"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string (set from Railway Postgres plugin)",
      "value": "${{ Postgres.DATABASE_URL }}"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT signing (generate with setup script)",
      "value": ""
    },
    "SONAR_PACKAGE_ID": {
      "description": "Sui Move package ID for SONAR contracts",
      "value": "0x0"
    },
    "SONAR_MARKETPLACE_ID": {
      "description": "Marketplace object ID",
      "value": "0x0"
    },
    "SUI_RPC_URL": {
      "description": "Sui RPC endpoint (mainnet, testnet, or devnet)",
      "value": "https://fullnode.testnet.sui.io"
    },
    "WALRUS_RPC_URL": {
      "description": "Walrus RPC endpoint for blob storage",
      "value": "https://aggregator.walrus.network"
    },
    "MOCK_WALRUS": {
      "description": "Mock Walrus storage for testing",
      "value": "false"
    },
    "MOCK_SUI": {
      "description": "Mock Sui blockchain for testing",
      "value": "false"
    },
    "CORS_ORIGIN": {
      "description": "CORS allowed origin (frontend URL)",
      "value": "http://localhost:3000"
    }
  }
}
