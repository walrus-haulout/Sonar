{
  "name": "sonar-backend",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "setup": "bun scripts/setup.ts",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.2.2",
    "@fastify/rate-limit": "^9.1.0",
    "@mysten/sui.js": "^0.54.1",
    "@prisma/client": "^5.8.0",
    "@sonar/shared": "workspace:*",
    "cron": "^4.3.4",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.16.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "undici": "^5.28.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "eslint": "^8.0.0",
    "prisma": "^5.8.0",
    "typescript": "^5.9.3"
  }
}
